<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<ScrollView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  
  
  android:fillViewport="true">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 
    <ImageView android:id="@+id/image"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="5dip"/>
    
    <ImageView android:id="@+id/imager"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="5dip"/>
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#99cc00"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Movies"
        style="@style/mov1"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#99cc00"
    android:gravity="center"
    >
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
   
   <Button
        android:id="@+id/kannada"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_inbox"
        android:gravity="center_horizontal"
        android:text="Kannada"
    style="@style/sub"
        android:textColor="#ffffff"
        android:textStyle="bold" />
  <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
   
</LinearLayout>

        <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FF4444"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
   
   <Button
        android:id="@+id/hindi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_inbox"
        android:gravity="center_horizontal"
        android:text="Hindi"
        style="@style/sub"
        android:textColor="#ffffff"
        android:textStyle="bold" />
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
   
</LinearLayout>
      
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFBB33"
    android:gravity="center"
    >
      <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
     <Button
        android:id="@+id/english"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_inbox"
        android:gravity="center_horizontal"
        android:text="English"
        android:textColor="#ffffff"
        android:textStyle="bold" />
 <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>      
        
      <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#33B5E5"
    android:gravity="center"
    >
  <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <Button
        android:id="@+id/telugu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_inbox"
        android:gravity="center_horizontal"
        android:text="Telugu"
        android:textColor="#ffffff"
        android:textStyle="bold" />
 <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#AA66CC"
    android:gravity="center"
    >

</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#AA66CC"
    android:gravity="center"
    android:soundEffectsEnabled="true" 
    android:scrollbars="horizontal|vertical" android:saveEnabled="true" android:persistentDrawingCache="animation|scrolling">

    

    
</LinearLayout>

</LinearLayout>
</ScrollView>
 <LinearLayout
      android:id="@+id/linearLayout1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentBottom="true" >
     <ImageView android:id="@+id/ti"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="5dip"
        /></LinearLayout>
</LinearLayout>
</RelativeLayout>